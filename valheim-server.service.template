[Unit]
Description=Valheim Server Service

[Service]
EnvironmentFile=-/etc/valheim/config.properties
ExecStartPre=/opt/valheim/steamcmd +login anonymous +force_install_dir /opt/valheim/server +app_update 896660 validate +quit
ExecStart=/bin/bash /opt/valheim/start_valheim_server.sh
ExecStop=/bin/bash /opt/valheim/stop_valheim_server.sh
User=valheim
Restart=always

[Install]
WantedBy=multi-user.target